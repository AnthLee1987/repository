        <BuildDependencies>
            <Dependency>libgtk-2-devel</Dependency>
            <Dependency>pango-devel</Dependency>
            <Dependency>gconf-devel</Dependency>
            <Dependency>intltool</Dependency>
        </BuildDependencies>
    </Source>
    
