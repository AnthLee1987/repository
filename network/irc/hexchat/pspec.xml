<!DOCTYPE PISI SYSTEM "http://www.solusos.com/standard/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>hexchat</Name>
        <Homepage>http://hexchat.org/</Homepage>
        <Packager>
            <Name>Justin Krehel</Name>
            <Email>justin@solusos.com</Email>
        </Packager>
        <Summary>IRC Client based on XChat</Summary>
        <Description>HexChat is an IRC client based on XChat that is updated regularly. It allows for connection to multiple servers, private conversations, and file transfers. It is the default IRC client in SolusOS.</Description>
        <License>GPLv2</License>
        <Archive sha1sum="3ad562ec76323ba9d0f279d36201a333594c755b" type="tarxz">http://users.on.net/justin.zobel/hexchat-2.10.1.tar.xz</Archive>
        <BuildDependencies>
		<Dependency type="pkgconfig">gtk+-2.0</Dependency>
		<Dependency>gnome-common</Dependency>
		<Dependency>dbus-glib</Dependency>
		<Dependency>desktop-file-utils</Dependency>
		<Dependency>libcanberra</Dependency>
		<Dependency>libnotify</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>hexchat-devel</Name>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="library">/usr/lib/*.so</Path>
            <Path fileType="library">/usr/lib/pkgconfig</Path>
        </Files>
    </Package>

    <Package>
        <Name>hexchat</Name>
        <Files>
            <Path fileType="config">/etc</Path>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="library">/usr/lib/*.so.*</Path>
            <Path fileType="data">/usr/share/appdata</Path>
            <Path fileType="data">/usr/share/applications</Path>
            <Path fileType="data">/usr/share/dbus-1</Path>
            <Path fileType="data">/usr/share/icons</Path>
            <Path fileType="localedata">/usr/share/locale</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
