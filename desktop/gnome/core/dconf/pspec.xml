    <Package>
        <Name>dconf</Name>
        <Files>
            <Path fileType="executable">/usr/bin/dconf</Path>
            <Path fileType="executable">/usr/lib/dconf/dconf-service</Path>
            <Path fileType="library">/usr/lib/gio</Path>
