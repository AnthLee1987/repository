Subject: [PATCH 1/2] schemas: Apply default Evolve OS branding

---
 schemas/org.gnome.desktop.background.gschema.xml.in.in     | 2 +-
 schemas/org.gnome.desktop.interface.gschema.xml.in.in      | 6 +++---
 schemas/org.gnome.desktop.wm.preferences.gschema.xml.in.in | 4 ++--
 3 files changed, 6 insertions(+), 6 deletions(-)

diff --git a/schemas/org.gnome.desktop.background.gschema.xml.in.in b/schemas/org.gnome.desktop.background.gschema.xml.in.in
index 4d3c32b..cef482e 100644
--- a/schemas/org.gnome.desktop.background.gschema.xml.in.in
+++ b/schemas/org.gnome.desktop.background.gschema.xml.in.in
@@ -10,7 +10,7 @@
       </_description>
     </key>
     <key name="picture-uri" type="s">
-      <default>'file://@datadir@/themes/Adwaita/backgrounds/adwaita-timed.xml'</default>
+      <default>'file://@datadir@/backgrounds/evolve-os/BogFlower.jpg'</default>
       <_summary>Picture URI</_summary>
       <_description>
         URI to use for the background image. Note that the backend only supports
diff --git a/schemas/org.gnome.desktop.interface.gschema.xml.in.in b/schemas/org.gnome.desktop.interface.gschema.xml.in.in
index c102bd1..fa3d6c8 100644
--- a/schemas/org.gnome.desktop.interface.gschema.xml.in.in
+++ b/schemas/org.gnome.desktop.interface.gschema.xml.in.in
@@ -83,14 +83,14 @@
       </_description>
     </key>
     <key name="icon-theme" type="s">
-      <default>'gnome'</default>
+      <default>'Numix-Circle'</default>
       <_summary>Icon Theme</_summary>
       <_description>
         Icon theme to use for the panel, nautilus etc.
       </_description>
     </key>
     <key name="gtk-theme" type="s">
-      <default>'Adwaita'</default>
+      <default>'Evotex'</default>
       <_summary>Gtk+ Theme</_summary>
       <_description>
         Basename of the default theme used by gtk+.
@@ -104,7 +104,7 @@
       </_description>
     </key>
     <key name="font-name" type="s">
-      <default>'Cantarell 11'</default>
+      <default>'Roboto 10'</default>
       <_summary>Default font</_summary>
       <_description>
         Name of the default font used by gtk+.
diff --git a/schemas/org.gnome.desktop.wm.preferences.gschema.xml.in.in b/schemas/org.gnome.desktop.wm.preferences.gschema.xml.in.in
index 6d2502e..ca7a205 100644
