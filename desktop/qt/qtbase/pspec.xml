<!DOCTYPE PISI SYSTEM "http://www.solusos.com/standard/pisi-spec.dtd">
<PISI>
    <Source>
        <Name>qt5-base</Name>
        <Homepage>http://qt.digia.com/</Homepage>
        <Packager>
            <Name>Ikey Doherty</Name>
            <Email>ikey@solusos.com</Email>
        </Packager>
        <Summary>Cross platform application and UI framework</Summary>
        <Description>Cross platform application and UI development framework</Description>
        <License>GPLv2+</License>
        <Archive sha1sum="40590b503c033df9c88096ebc92072f282401092" type="tarxz">http://download.qt-project.org/official_releases/qt/5.1/5.1.1/submodules/qtbase-opensource-src-5.1.1.tar.xz</Archive>

        <BuildDependencies>
            <Dependency>libicu-devel</Dependency>
            <Dependency>systemd-devel</Dependency>
            <Dependency>zlib-devel</Dependency>
            <Dependency>mesalib-devel</Dependency>
            <Dependency>libxkbcommon-devel</Dependency>
            <Dependency>libjpeg-turbo-devel</Dependency>
            <Dependency>libpcre-devel</Dependency>
            <Dependency>libx11-devel</Dependency>
            <Dependency>libdrm-devel</Dependency>
            <Dependency>libxcb-devel</Dependency>
            <Dependency>libxi-devel</Dependency>
            <Dependency>libgtk-2-devel</Dependency>
            <Dependency>glib2-devel</Dependency>
            <Dependency>pango-devel</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
        <Name>qt5</Name>
        <Files>
            <Path fileType="library">/usr/lib/lib*.so*</Path>
            <Path fileType="library">/usr/lib/lib*.a</Path>
            <Path fileType="library">/usr/lib/qt5/plugins</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency>libicu</Dependency>
            <Dependency>systemd</Dependency>
            <Dependency>zlib</Dependency>
            <Dependency>mesalib</Dependency>
            <Dependency>freetype2</Dependency>
            <Dependency>libxkbcommon</Dependency>
            <Dependency>libjpeg-turbo</Dependency>
            <Dependency>libpcre</Dependency>
            <Dependency>libx11</Dependency>
            <Dependency>fontconfig</Dependency>
            <Dependency>libstdc++</Dependency>
            <Dependency>libdrm</Dependency>
            <Dependency>libgcc</Dependency>
            <Dependency>libxcb</Dependency>
            <Dependency>libxi</Dependency>
            <Dependency>libgtk-2</Dependency>
            <Dependency>glib2</Dependency>
            <Dependency>pango</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>qt5-devel</Name>
        <Summary>Development files for Qt 5</Summary>
        <Description>Development files for Qt 5</Description>
        <Files>
            <Path fileType="executable">/usr/bin</Path>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="header">/usr/lib/qt5/mkspecs</Path>
            <Path fileType="data">/usr/lib/cmake</Path>
            <Path fileType="data">/usr/lib/pkgconfig</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">qt5</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>qt5-docs</Name>
        <Summary>API Documentation for Qt 5</Summary>
        <Description>API Documentation for Qt 5</Description>
        <Files>
            <Path fileType="executable">/usr/share/doc/qt5</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">qt5-devel</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>qt5-demos</Name>
        <Summary>Qt 5 demonstration programs</Summary>
        <Description>Qt 5 demonstration programs</Description>
        <Files>
            <Path fileType="executable">/usr/lib/qt5/examples</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">qt5</Dependency>
        </RuntimeDependencies>
    </Package>

    <History>
        <Update release="1">
            <Date>09-19-2013</Date>
            <Version>5.1.1</Version>
            <Comment>Add qt5-base to repositories</Comment>
