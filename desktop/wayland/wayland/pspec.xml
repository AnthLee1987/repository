            <Path fileType="library">/usr/lib/lib*.so*</Path>
            <Path fileType="doc">/usr/share/doc</Path>
        </Files>
    </Package>
    
    <Package>
        <Name>wayland-devel</Name>
        <Summary>Development files for wayland</Summary>
