            <Dependency type="pkgconfig">xext</Dependency>
            <Dependency type="pkgconfig">glamor-egl</Dependency>

            <Dependency type="pkgconfig">resourceproto</Dependency>
            <Dependency type="pkgconfig">scrnsaverproto</Dependency>
        </BuildDependencies>
    </Source>

    <Package>
