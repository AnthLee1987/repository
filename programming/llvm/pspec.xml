    <Package>
        <Name>llvm</Name>
        <Files>
            <Path fileType="executable">/usr/bin/bugpoint</Path>
            <Path fileType="executable">/usr/bin/c-index-test</Path>
            <Path fileType="executable">/usr/bin/ll*</Path>
