            <Dependency>attr-devel</Dependency>
            <Dependency>json-c-devel</Dependency>
            <Dependency>dbus-devel</Dependency>
            <Dependency>openssl-devel</Dependency>
            <Dependency>libspeex-devel</Dependency>
        </BuildDependencies>
	</Source>

